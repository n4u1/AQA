<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingTop="16dp"
    android:paddingRight="32dp"
    android:paddingBottom="16dp"
    tools:context=".dialog.ShowMoreActivity">

    <TextView
        android:id="@+id/showMore_textView_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="삭제하기"
        android:textColor="#1a1a1a"
        android:textSize="22dp" />

    <RelativeLayout
        android:id="@+id/showMore_relativeLayout_settingAlarm"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">


        <TextView
            android:id="@+id/showMore_settingAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="알람 설정하기"
            android:textColor="#1a1a1a"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/showMore_imageView_upDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/showMore_settingAlarm"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/showMore_settingAlarm"
            android:layout_weight="1"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

    </RelativeLayout>


    <EditText
        android:id="@+id/showMore_editText_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="\?"
        android:inputType="number"
        android:maxLength="9"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="#1a1a1a"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/showMore_textView_countResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="\? 명 이 투표하면 알려드려요!"
        android:textColor="#5b5b5b"
        android:textSize="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4" />

        <TextView
            android:id="@+id/showMore_textView_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="취소"
            android:textColor="#4485c9"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/showMore_textView_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="확인"
            android:textColor="#4485c9"
            android:textSize="16dp" />


    </LinearLayout>

</LinearLayout>